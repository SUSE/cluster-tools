			<nvpair id="${UUID}_hostlist" name="hostlist" value="$IPMPI_HOSTNAME"/>
		</attributes>
	</instance_attributes>
	<meta_attributes id="${UUID}_meta_attrs">
		<attributes>
			<nvpair id="${UUID}_meta_attr_target_role" name="target_role" value="stopped"/>
		</attributes>
	</meta_attributes>
</primitive>
