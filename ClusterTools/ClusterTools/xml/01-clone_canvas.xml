       <clone id="${UUID}">
         <instance_attributes id="${UUID}_instance_attrs">
           <attributes>
             <nvpair id="${UUID}_clone_max" name="clone_max" value="$CLONE_MAX"/>
             <nvpair id="${UUID}_clone_node_max" name="clone_node_max" value="1"/>
           </attributes>
         </instance_attributes>
         <meta_attributes id="${UUID}_meta_attrs">
           <attributes>
             <nvpair name="is_managed" id="${UUID}_meta_attr-is_managed" value="true"/>
             <nvpair name="target_role" id="${UUID}_meta_attr-target_role" value="stopped"/>
           </attributes>
         </meta_attributes>
       </clone>
