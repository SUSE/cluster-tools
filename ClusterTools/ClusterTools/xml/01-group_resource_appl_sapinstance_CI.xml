<group id="$GROUPID">
         <primitive class="ocf" type="SAPInstance" provider="heartbeat" id="${UUID}">
           <instance_attributes id="${UUID}_instance_attrs">
             <attributes>
               <nvpair id="${UUID}_attr_0" name="InstanceName" value="$SAP_INSTANCE"/>
               <nvpair id="${UUID}_attr_1" name="AUTOMATIC_RECOVER" value="true"/>
               <nvpair id="${UUID}_attr_2" name="START_PROFILE" value="$SAP_START_PROFILE"/>
             </attributes>
           </instance_attributes>
           <operations>
             <op id="${UUID}_start" name="start" timeout="240" start_delay="0" disabled="false" role="Started"/>
             <op id="${UUID}_stop" name="stop" timeout="240" start_delay="0" disabled="false" role="Started" on_fail="block"/>
             <op id="${UUID}_mon" name="monitor" interval="120" timeout="60" start_delay="240" disabled="false" role="Started"/>
           </operations>
           <meta_attributes id="${UUID}_meta_attrs">
             <attributes>
               <nvpair id="${UUID}_meta_attrs-target_role" name="target_role" value="stopped"/>
             </attributes>
           </meta_attributes>
         </primitive>
</group>
