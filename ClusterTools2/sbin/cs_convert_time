#!/usr/bin/perl -w
# 
# cs_convert_time
#
# Version: 2015-03-12
#
# http://stackoverflow.com/questions/95492/how-do-i-convert-a-date-time-to-epoch-time-aka-unix-time-seconds-since-1970
#
# TODO re-write in bash, simply "date -d $WALLCLOCK +%s" and "date -d @$EPOCH" 
# TODO add cmdline opts --version, --help
#

use strict;

$_ = (join ' ', @ARGV);
$_ ||= <STDIN>;

chomp;

if (/^[\d.]+$/) {
	print scalar localtime $_;
	print "\n";
}
else {
	exec "date -d '$_' +%s";
}
#
