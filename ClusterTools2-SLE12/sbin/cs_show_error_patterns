"end.*failed"
"ead.*failed"
"pagecache.limit.set"
"

test -z "${SVCERR_PATTERN}" &&\
	 SVCERR_PATTERN="
"systemd.*Received.SIGINT"
"systemd.*start-limit"
"systemd.*nknown"
"systemd.*Proceeding.anyway"
"systemd.*No.such.file"
"systemd.*ailed"
