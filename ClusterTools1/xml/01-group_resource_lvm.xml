<group id="$GROUPID">
         <primitive class="ocf" provider="heartbeat" type="LVM" id="${UUID}">
           <operations>
             <op id="${UUID}_mon" interval="120s" name="monitor" timeout="60s" start_delay="0" disabled="false" role="Started"/>
             <op id="${UUID}_stop" name="stop" timeout="30" on_fail="fence" start_delay="0" disabled="false" role="Started"/>
           </operations>
           <instance_attributes id="${UUID}">
             <attributes>
               <nvpair id="${UUID}_attr_0" name="volgrpname" value="$VOLUMEGROUP"/>
             </attributes>
           </instance_attributes>
         </primitive>
</group>
