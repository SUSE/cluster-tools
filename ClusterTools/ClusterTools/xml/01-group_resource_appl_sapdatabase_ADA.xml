<group id="$GROUPID">
         <primitive class="ocf" type="SAPDatabase" provider="heartbeat" id="${UUID}">
           <instance_attributes id="${UUID}_instance_attrs">
             <attributes>
               <nvpair id="${UUID}_attr_0" name="SID" value="${SAPSID}"/>
               <nvpair id="${UUID}_attr_1" name="DBTYPE" value="$DBTYPE"/>
             </attributes>
           </instance_attributes>
           <operations>
             <op id="${UUID}_start" name="start" timeout="1800" start_delay="0" disabled="false" role="Started"/>
             <op id="${UUID}_stop" name="stop" timeout="1800" start_delay="0" disabled="false" role="Started" on_fail="block"/>
             <op id="${UUID}_mon" name="monitor" interval="120" timeout="60" start_delay="180" disabled="false" role="Started"/>
           </operations>
           <meta_attributes id="${UUID}_meta_attrs">
             <attributes>
               <nvpair id="${UUID}_meta_attr-target_role" name="target_role" value="stopped"/>
             </attributes>
           </meta_attributes>
         </primitive>
</group>
