'/bin/lsmod'
'ls -l /boot/vmlinuz | colrm 27 39'
'ls -l /boot/initrd | colrm 27 39'
'ls -l /boot/vmlinuz-xen | colrm 27 39'
'ls -l /boot/initrd-xen | colrm 27 39'
'zcat /boot/initrd | cpio -itv 2>/dev/null | colrm 43 54'
