<group id="$GROUPID">
 <primitive id="${UUID}" class="ocf" type="sfex-two-devices" provider="heartbeat">
   <instance_attributes id="${UUID}_instance_attrs">
     <attributes>
       <nvpair id="${UUID}_device"  name="device" value="$SFEX_DEVICE"/>
       <nvpair id="${UUID}_device2" name="device2" value="$SFEX_DEVICE2"/>
       <nvpair id="${UUID}_monitor_interval" name="monitor_interval" value="5"/>
       <nvpair id="${UUID}_index" name="index" value="$SFEX_INDEX"/>
       <nvpair id="${UUID}_lock_timeout" name="lock_timeout" value="20"/>
     </attributes>
   </instance_attributes>
   <meta_attributes id="${UUID}_meta_attrs">
     <attributes/>
   </meta_attributes>
   <operations>
     <op id="${UUID}_monitor" name="monitor" interval="5" timeout="60" start_delay="10" on_fail="block" disabled="false" role="Started"/>
     <op id="${UUID}_start"   name="start" timeout="60" on_fail="block" start_delay="0" disabled="false" role="Started"/>
     <op id="${UUID}_stop"    name="stop" timeout="10" on_fail="block" start_delay="0" disabled="false" role="Started"/>
   </operations>
 </primitive>
</group>

