<cluster_property_set id="$UUID">
	<attributes>
		<nvpair id="$UUID-symmetric-cluster" name="symmetric-cluster" value="true"/>
		<nvpair id="$UUID-default-resource-stickiness" name="default-resource-stickiness" value="$DEFAULT_RESOURCE_STICKINESS"/>
		<nvpair id="$UUID-default-resource-failure-stickiness" name="default-resource-failure-stickiness" value="0"/>
		<nvpair id="$UUID-stonith-enabled" name="stonith-enabled" value="$STONITH_ENABLED"/>
		<nvpair id="$UUID-stonith-action" name="stonith-action" value="$STONITH_ACTION"/> 
		<nvpair id="$UUID-stop-orphan-resources" name="stop-orphan-resources" value="true"/>
		<nvpair id="$UUID-stop-orphan-actions" name="stop-orphan-actions" value="true"/>
		<nvpair id="$UUID-remove-after-stop" name="remove-after-stop" value="false"/>
		<nvpair id="$UUID-short-resource-names" name="short-resource-names" value="true"/>
		<nvpair id="$UUID-transition-idle-timeout" name="transition-idle-timeout" value="2min"/>
		<nvpair id="$UUID-default-action-timeout" name="default-action-timeout" value="$DEFAULT_ACTION_TIMEOUT"/>
		<nvpair id="$UUID-is-managed-default" name="is-managed-default" value="true"/>
		<nvpair id="$UUID-no-quorum-policy" name="no-quorum-policy" value="$NO_QUORUM_POLICY"/>
	</attributes>
</cluster_property_set>
